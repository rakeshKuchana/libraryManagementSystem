<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>libraryManagementSystem</display-name>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/jsp/logout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>test</servlet-name>
        <jsp-file>/WEB-INF/jsp/test.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>identificationFilter</filter-name>
        <filter-class>com.rakesh.librarymanagementsystem.filter.IdentificationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>identificationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>book</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>book</servlet-name>
        <url-pattern>/searchBooks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>issue</servlet-name>
        <jsp-file>/WEB-INF/jsp/librarian/issue.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>issue</servlet-name>
        <url-pattern>/issue</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>issueBook</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>issueBook</servlet-name>
        <url-pattern>/issueBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addLibrarian</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addLibrarian</servlet-name>
        <url-pattern>/addLibrarian</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationLinkServlet</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.RegistrationLinkController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationLinkServlet</servlet-name>
        <url-pattern>/registrationLn</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>librarianRegistration</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/librarianRegistration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>librarianRegistration</servlet-name>
        <url-pattern>/librarianRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationComplete</servlet-name>
        <jsp-file>/WEB-INF/jsp/registrationComplete.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationComplete</servlet-name>
        <url-pattern>/completeRegistration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationCompleteController</servlet-name>
        <servlet-class>com.rakesh.librarymanagementsystem.controller.RegistrationCompleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationCompleteController</servlet-name>
        <url-pattern>/registrationComplete</url-pattern>
    </servlet-mapping>
    
    
    
    <listener>
        <listener-class>com.rakesh.librarymanagementsystem.listener.ContextListener</listener-class>
    </listener>
    <!-- <error-page>
        <error-code>404</error-code>
        <location>/jsp/error404.jsp</location>
    </error-page>-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
